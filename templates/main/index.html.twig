{% extends 'base.html.twig' %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block stylesheets %}

    <!--
    <style>

        #header {
            width: 100%;
            height: 200px;
        }

    </style>
    -->

{% endblock %}

{% block body %}

    <!--
    <div id="header">
        <img src="https://www.eyeonsouthflorida.com/wp-content/uploads/2016/07/craft-beer.jpg" class="img-fluid">
    </div>
    -->

    <div class="container">

        <div class="row justify-content-center mt-5">
            <div class="col-12 col-md-6">
                <h2>Enter LAT/LONG coordinates</h2><br>

                {{ form_start(coordForm) }}

                    {{ form_errors(coordForm.latCoord) }}
                    {{ form_widget(coordForm.latCoord) }}
                    <br>

                    {{ form_errors(coordForm.longCoord) }}
                    {{ form_widget(coordForm.longCoord) }}

                    <div class="text-center">
                        <button class="btn btn-success mt-3 mb-5" type="submit" name="givenLocation">Start the trip!</button>
                    </div>

                {{ form_end(coordForm) }}

            </div>
        </div>


        {% if visitedBreweries %}

            <div class="row mt-5">

                <div class="col">

                    You have visited {{ visitedBreweries|length }} breweries in total:
                    <br>

                    {% for brewerie in visitedBreweries %}
                        {{ brewerie }}<br>
                    {% endfor %}
                    <br>

                    Total distance traveled: {{ distanceTraveled }} KM.

                </div>
                <div class="col">

                    {% for beerType in collectedBeer %}
                        {{ beerType }}<br>
                    {% endfor %}

                </div>

            </div>

        {% endif %}

    </div>

{% endblock %}
